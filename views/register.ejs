    <form action="/register" method="POST" >
        <div>
            <label class="form-label" for="email">Email</label><br>
            <input class="form-control" type="email" id="email" name="email" placeholder="Email" required><br><br>
        </div>
        <div>
            <label class="form-label" for="username">User Name</label><br>
